<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusable="true"

    android:orientation="vertical"
    app:ignore="NamespaceTypo">
    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7106139341895351/1044835970"></com.google.android.gms.ads.AdView>
    <android.support.v7.widget.GridLayout xmlns:grid="http://schemas.android.com/apk/res-auto"

        android:id="@+id/choice_grid"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:padding="2dp"
        grid:alignmentMode="alignBounds"
        grid:columnCount="2"
        grid:rowCount="4"
         android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        grid:rowOrderPreserved="false"
        grid:useDefaultMargins="false"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/year"
            android:drawableTop="@drawable/ic_public_white_48dp"
            android:drawablePadding="8dp"
            android:background="@android:color/holo_red_dark"
            android:onClick="getNews"
            android:text="General"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="0.125" />
        <Button
            android:id="@+id/button5"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/year"
            android:drawableTop="@drawable/ic_account_balance_white_48dp"
            android:background="@android:color/holo_blue_dark"

            android:onClick="getNews"
            android:text="Business"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="0.111" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/holo_blue_bright"
            android:textColor="@color/year"
            android:drawableTop="@drawable/ic_pool_white_48dp"
            android:onClick="getNews"
            android:text="Sports"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="0.111" />

        <Button
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/year"
            android:drawableTop="@drawable/ic_touch_app_white_48dp"
            android:background="@android:color/holo_green_light"

            android:onClick="getNews"
            android:text="Technology"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="0.111" />

        <Button
            android:id="@+id/button4"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="getNews"
            android:background="@android:color/holo_orange_dark"

            android:text="Entertainment"
            grid:layout_columnWeight="1"
            android:textColor="@color/year"
            android:drawableTop="@drawable/ic_grade_white_48dp"

            grid:layout_rowWeight="0.111" />



        <Button
            android:id="@+id/button6"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/holo_purple"
            android:textColor="@color/year"
            android:drawableTop="@drawable/ic_spa_white_48dp"


            android:onClick="getNews"
            android:text="Health"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="0.111" />

        <Button
            android:id="@+id/button7"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="getNews"
            android:text="Science"
            android:textColor="@color/year"
            android:drawableTop="@drawable/ic_lightbulb_outline_white_48dp"
            android:background="#008000"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="0.111" />

        <Button
            android:id="@+id/button8"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="0dp"
android:textColor="@color/year"
            android:onClick="getNews"
            android:text="All"
            android:drawableTop="@drawable/ic_public_white_48dp"
            android:background="@android:color/holo_red_light"

            grid:layout_columnWeight="1"
            grid:layout_rowWeight="0.111" />
    </android.support.v7.widget.GridLayout>


</RelativeLayout>